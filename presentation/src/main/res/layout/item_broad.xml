<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@color/afreeca_blue_500"
            android:contentDescription="@string/home_broad_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/AfreecaTV_TextMedium16.Grey"
            app:layout_constraintStart_toEndOf="@id/iv_thumbnail"
            app:layout_constraintTop_toTopOf="@id/iv_thumbnail"
            tools:text="백숙 먹방" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_more_r24"
            android:contentDescription="@string/home_broad_more_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_bg_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_circle_r28"
            android:contentDescription="@string/home_broad_profile_image"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_bg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/AfreecaTV_Caption12.Grey"
            app:layout_constraintStart_toEndOf="@id/iv_bg_profile"
            app:layout_constraintTop_toTopOf="@id/iv_bg_profile"
            tools:text="비제이 이름" />

        <ImageView
            android:id="@+id/iv_viewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_viewers_r12"
            android:contentDescription="@string/home_broad_viewers_image"
            app:layout_constraintStart_toStartOf="@id/tv_bg_name"
            app:layout_constraintTop_toBottomOf="@id/tv_bg_name" />

        <TextView
            android:id="@+id/tv_viewers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textAppearance="@style/AfreecaTV_Caption10.Grey"
            app:layout_constraintStart_toEndOf="@id/iv_viewers"
            app:layout_constraintTop_toTopOf="@id/iv_viewers"
            app:layout_constraintBottom_toBottomOf="@id/iv_viewers"
            tools:text="100" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>